{
  "root": "packages/core",
  "sourceRoot": "packages/core/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/core",
        "main": "packages/core/src/index.ts",
        "tsConfig": "packages/core/tsconfig.lib.json",
        "assets": ["packages/core/*.md"]
      }
    },
    "release": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "cd packages/core && cat package.json",
          "cd packages/core && npm version {args.version} --allow-same-version",
          "cd dist/packages/core && npm version {args.version} --allow-same-version",
          "cd packages/core && cat package.json",
          {
            "command": "cd dist/packages/core && npm publish --access public --dry-run",
            "forwardAllArgs": false
          }
        ],
        "cwd": "./",
        "parallel": false
      }
    }
  },
  "tags": []
}
